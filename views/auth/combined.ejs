<!-- Include SweetAlert library -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    // Show SweetAlert notifications for flash messages
    document.addEventListener('DOMContentLoaded', function() {
        // Check for flash messages passed from the server
        const successMsg = document.querySelector('.alert-success');
        const errorMsg = document.querySelector('.alert-danger');
        
        if (successMsg) {
            const message = successMsg.textContent.trim();
            Swal.fire({
                icon: 'success',
                title: 'Success',
                text: message,
                confirmButtonColor: '#4caf50'
            }).then(() => {
                // Remove the alert after showing it
                successMsg.remove();
            });
        }
        
        if (errorMsg) {
            const message = errorMsg.textContent.trim();
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: message,
                confirmButtonColor: '#4caf50'
            }).then(() => {
                // Remove the alert after showing it
                errorMsg.remove();
            });
        }
    });
    
    function switchTab(tab) {
        // Remove active class from all tabs and forms
        document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
        document.querySelectorAll('.form').forEach(form => form.classList.remove('active'));
        
        // Add active class to selected tab and form
        event.target.classList.add('active');
        
        if (tab === 'login') {
            document.getElementById('loginForm').classList.add('active');
        } else {
            document.getElementById('registerForm').classList.add('active');
        }
    }
    
    function showForgotPassword() {
        Swal.fire({
            title: 'Lupa Password',
            text: 'Fungsi lupa password akan diimplementasikan di sini',
            icon: 'info',
            confirmButtonColor: '#4caf50'
        });
    }
    
    // Handle form submissions
    document.addEventListener('DOMContentLoaded', function() {
        const loginForm = document.querySelector('#loginForm form');
        const registerForm = document.querySelector('#registerForm form');
        const phoneInput = document.getElementById('registerPhone');
        
        // Phone number input validation (only allow numbers)
        if (phoneInput) {
            phoneInput.addEventListener('input', function(e) {
                // Remove any non-numeric characters
                let value = e.target.value.replace(/[^0-9]/g, '');
                
                // Limit to 13 characters
                if (value.length > 13) {
                    value = value.substring(0, 13);
                }
                
                e.target.value = value;
                
                // Visual validation feedback
                if (value.length >= 10 && value.length <= 13) {
                    e.target.classList.remove('error');
                    e.target.classList.add('success');
                } else if (value.length > 0) {
                    e.target.classList.remove('success');
                    e.target.classList.add('error');
                } else {
                    e.target.classList.remove('error', 'success');
                }
            });
        }
        
        registerForm.addEventListener('submit', function(e) {
            const password = document.getElementById('registerPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            
            // Validate password match
            if (password !== confirmPassword) {
                e.preventDefault();
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Password tidak cocok!',
                    confirmButtonColor: '#4caf50'
                });
                return;
            }
            
            // Validate phone number if provided
            const phone = document.getElementById('registerPhone').value;
            if (phone) {
                const phoneRegex = /^[0-9]{10,13}$/;
                if (!phoneRegex.test(phone)) {
                    e.preventDefault();
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Nomor telepon harus 10-13 digit dan hanya berisi angka!',
                        confirmButtonColor: '#4caf50'
                    });
                    return;
                }
            }
        });
        
        // Google sign in buttons
        document.querySelectorAll('.google-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                Swal.fire({
                    title: 'Google Sign In',
                    text: 'Integrasi Google OAuth akan diimplementasikan di sini',
                    icon: 'info',
                    confirmButtonColor: '#4caf50'
                });
            });
        });
    });
</script>