<%- include('../layouts/main', { title: title, user: user }) %>


        <div class="container-fluid py-4">
            <div class="row">
                <!-- Course Content -->
                <div class="col-lg-8">
                    <!-- Course Header -->
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h1 class="fw-bold mb-2"><%= course.title %></h1>
                                    <p class="text-muted mb-0"><%= course.description %></p>
                                </div>
                                <div class="text-end">
                                    <div class="progress mb-2" style="width: 150px; height: 8px;">
                                        <div class="progress-bar" role="progressbar" 
                                             style="width: <%= progressPercentage %>%" 
                                             aria-valuenow="<%= progressPercentage %>" 
                                             aria-valuemin="0" 
                                             aria-valuemax="100">
                                        </div>
                                    </div>
                                    <small class="text-muted">Progress: <strong><%= progressPercentage %>%</strong></small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Current Lesson Content -->
                    <div class="card mb-4" id="lesson-content">
                        <div class="card-body">
                            <div class="text-center py-5">
                                <i class="fas fa-play-circle fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">Pilih pelajaran untuk mulai belajar</h5>
                                <p class="text-muted">Klik pada pelajaran di sidebar untuk memulai pembelajaran</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Course Sidebar -->
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-list me-2"></i>Daftar Pelajaran</h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="accordion" id="courseModules">
                                <% course.modules.forEach((module, moduleIndex) => { %>
                                    <div class="accordion-item">
                                        <h2 class="accordion-header">
                                            <button class="accordion-button <%= moduleIndex === 0 ? '' : 'collapsed' %>" 
                                                    type="button" 
                                                    data-bs-toggle="collapse" 
                                                    data-bs-target="#module<%= module.id %>">
                                                <i class="fas fa-folder me-2"></i>
                                                <%= module.title %>
                                                <span class="badge bg-primary ms-auto">
                                                    <%= module.lessons.length %> pelajaran
                                                </span>
                                            </button>
                                        </h2>
                                        <div id="module<%= module.id %>" 
                                             class="accordion-collapse collapse <%= moduleIndex === 0 ? 'show' : '' %>" 
                                             data-bs-parent="#courseModules">
                                            <div class="accordion-body p-0">
                                                <div class="list-group list-group-flush">
                                                    <% module.lessons.forEach((lesson, lessonIndex) => { %>
                                                        <% const lessonProgress = progress.find(p => p.lesson_id === lesson.id); %>
                                                        <div class="list-group-item d-flex justify-content-between align-items-center lesson-item" 
                                                             data-lesson-id="<%= lesson.id %>"
                                                             style="cursor: pointer;">
                                                            <div class="d-flex align-items-center">
                                                                <i class="fas fa-play-circle me-2 text-primary"></i>
                                                                <div>
                                                                    <div class="fw-medium"><%= lesson.title %></div>
                                                                    <small class="text-muted">
                                                                        <%= lesson.duration ? Math.floor(lesson.duration / 60) + ' menit' : 'Tidak ditentukan' %>
                                                                    </small>
                                                                </div>
                                                            </div>
                                                            <div class="d-flex align-items-center">
                                                                <% if (lessonProgress && lessonProgress.is_completed) { %>
                                                                    <i class="fas fa-check-circle text-success me-2"></i>
                                                                <% } %>
                                                                <button class="btn btn-sm btn-outline-primary complete-btn" 
                                                                        onclick="toggleLessonComplete(<%= lesson.id %>)"
                                                                        style="display: none;">
                                                                    <i class="fas fa-check"></i>
                                                                </button>
                                                            </div>
                                                        </div>
                                                    <% }); %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    