<%- include('../layouts/main', { title: title, user: user }) %>


        <div class="container py-5">
            <!-- Header -->
            <div class="row mb-5">
                <div class="col-12 text-center">
                    <h1 class="fw-bold mb-3">Gallery Kegiatan</h1>
                    <p class="text-muted lead">Dokumentasi kegiatan mengajar, workshop, dan aktivitas pendidikan</p>
                </div>
            </div>

            <!-- Search Bar -->
            <div class="row mb-4">
                <div class="col-md-8 mx-auto">
                    <form method="GET" class="d-flex">
                        <input type="text" class="form-control me-2" name="q" placeholder="Cari kegiatan..." value="<%= query %>">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>
                </div>
            </div>

            <!-- Activities Grid -->
            <% if (posts && posts.length > 0) { %>
                <div class="row g-4">
                    <% posts.forEach(post => { %>
                        <div class="col-lg-4 col-md-6">
                            <div class="card h-100 shadow-sm activity-card">
                                <!-- Featured Image -->
                                <% if (post.featured_image) { %>
                                    <div class="activity-image-container">
                                        <img src="<%= post.featured_image %>" class="card-img-top" alt="<%= post.title %>" style="height: 200px; object-fit: cover;">
                                        <div class="activity-overlay">
                                            <a href="/posts/<%= post.slug %>" class="btn btn-light btn-sm">
                                                <i class="fas fa-eye me-1"></i>Lihat Detail
                                            </a>
                                        </div>
                                    </div>
                                <% } else { %>
                                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                        <i class="fas fa-calendar-alt fa-3x text-muted"></i>
                                    </div>
                                <% } %>
                                
                                <div class="card-body">
                                    <h5 class="card-title fw-bold mb-2">
                                        <a href="/posts/<%= post.slug %>" class="text-decoration-none text-dark">
                                            <%= post.title %>
                                        </a>
                                    </h5>
                                    
                                    <% if (post.excerpt) { %>
                                        <p class="card-text text-muted mb-3">
                                            <%= post.excerpt.length > 100 ? post.excerpt.substring(0, 100) + '...' : post.excerpt %>
                                        </p>
                                    <% } %>
                                    
                                    <div class="activity-meta">
                                        <div class="row text-muted small">
                                            <div class="col-6">
                                                <i class="fas fa-calendar me-1"></i>
                                                <% if (post.activity_date) { %>
                                                    <%= new Date(post.activity_date).toLocaleDateString('id-ID') %>
                                                <% } else { %>
                                                    -
                                                <% } %>
                                            </div>
                                            <div class="col-6">
                                                <i class="fas fa-tag me-1"></i>
                                                <%= post.category_name || 'Umum' %>
                                            </div>
                                        </div>
                                        
                                        <% if (post.location) { %>
                                            <div class="mt-2 text-muted small">
                                                <i class="fas fa-map-marker-alt me-1"></i>
                                                <%= post.location %>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                                
                                <div class="card-footer bg-transparent">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">
                                            <i class="fas fa-eye me-1"></i>
                                            <%= post.view_count || 0 %> dilihat
                                        </small>
                                        <a href="/posts/<%= post.slug %>" class="btn btn-outline-primary btn-sm">
                                            Lihat Detail
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>

                <!-- Pagination -->
                <% if (totalPages > 1) { %>
                    <nav aria-label="Gallery pagination" class="mt-5">
                        <ul class="pagination justify-content-center">
                            <% if (hasPrevPage) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage - 1 %>&q=<%= query %>">Previous</a>
                                </li>
                            <% } %>
                            
                            <% for (let i = 1; i <= totalPages; i++) { %>
                                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                    <a class="page-link" href="?page=<%= i %>&q=<%= query %>"><%= i %></a>
                                </li>
                            <% } %>
                            
                            <% if (hasNextPage) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage + 1 %>&q=<%= query %>">Next</a>
                                </li>
                            <% } %>
                        </ul>
                    </nav>
                <% } %>
            <% } else { %>
                <div class="text-center py-5">
                    <i class="fas fa-calendar-alt fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Belum ada kegiatan</h5>
                    <p class="text-muted">Kegiatan akan ditampilkan di sini setelah ditambahkan.</p>
                </div>
            <% } %>
        </div>
    