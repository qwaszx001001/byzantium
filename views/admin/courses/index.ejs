<%- include('../../layouts/admin', { title: title, user: user }) %>


        <div class="container py-5">
            <div class="row">
                <div class="col-12">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <h1 class="fw-bold">Kelola Kursus</h1>
                            <p class="text-muted">Kelola semua kursus di platform ByzantiumEdu</p>
                        </div>
                        <a href="/admin/courses/create" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Tambah Kursus
                        </a>
                    </div>

                    <!-- Search and Filter -->
                    <div class="card mb-4">
                        <div class="card-body">
                            <form method="GET" class="row g-3">
                                <div class="col-md-4">
                                    <input type="text" class="form-control" name="search" placeholder="Cari kursus..." value="">
                                </div>
                                <div class="col-md-3">
                                    <select class="form-select" name="category">
                                        <option value="">Semua Kategori</option>
                                        <option value="1">Teknologi</option>
                                        <option value="2">Pendidikan</option>
                                        <option value="3">Bisnis</option>
                                        <option value="4">Kesehatan</option>
                                        <option value="5">Seni & Budaya</option>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <select class="form-select" name="status">
                                        <option value="">Semua Status</option>
                                        <option value="published">Diterbitkan</option>
                                        <option value="draft">Draft</option>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <button type="submit" class="btn btn-outline-primary w-100">
                                        <i class="fas fa-search me-1"></i>Cari
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Courses Table -->
                    <div class="card">
                        <div class="card-body">
                            <% if (courses && courses.length > 0) { %>
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Judul</th>
                                                <th>Kategori</th>
                                                <th>Instructor</th>
                                                <th>Status</th>
                                                <th>Harga</th>
                                                <th>Durasi</th>
                                                <th>Aksi</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% courses.forEach(course => { %>
                                                <tr>
                                                    <td>
                                                        <div>
                                                            <strong><%= course.title %></strong>
                                                            <br>
                                                            <small class="text-muted"><%= course.slug %></small>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <% if (course.category_name) { %>
                                                            <span class="badge bg-secondary"><%= course.category_name %></span>
                                                        <% } else { %>
                                                            <span class="text-muted">-</span>
                                                        <% } %>
                                                    </td>
                                                    <td>
                                                        <% if (course.instructor_name) { %>
                                                            <%= course.instructor_name %>
                                                        <% } else { %>
                                                            <span class="text-muted">-</span>
                                                        <% } %>
                                                    </td>
                                                    <td>
                                                        <% if (course.is_published) { %>
                                                            <span class="badge bg-success">Diterbitkan</span>
                                                        <% } else { %>
                                                            <span class="badge bg-warning">Draft</span>
                                                        <% } %>
                                                    </td>
                                                    <td>
                                                        <% if (course.is_free) { %>
                                                            <span class="badge bg-info">Gratis</span>
                                                        <% } else { %>
                                                            <span class="badge bg-primary">Rp <%= course.price %></span>
                                                        <% } %>
                                                    </td>
                                                    <td>
                                                        <% if (course.duration > 0) { %>
                                                            <span class="badge bg-success"><%= course.duration %> menit</span>
                                                        <% } else { %>
                                                            <span class="text-muted">-</span>
                                                        <% } %>
                                                    </td>
                                                    <td>
                                                        <div class="btn-group" role="group">
                                                            <a href="/admin/courses/<%= course.id %>/modules" class="btn btn-sm btn-primary" title="Kelola Modul">
                                                                <i class="fas fa-folder"></i>
                                                            </a>
                                                            <a href="/admin/courses/<%= course.id %>/edit" class="btn btn-sm btn-warning" title="Edit">
                                                                <i class="fas fa-edit"></i>
                                                            </a>
                                                            <button class="btn btn-sm btn-danger" title="Hapus">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        </div>
                                                    </td>
                                                </tr>
                                            <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                                
                                <!-- Pagination -->
                                <% if (totalPages > 1) { %>
                                    <nav aria-label="Course pagination" class="mt-4">
                                        <ul class="pagination justify-content-center">
                                            <% if (hasPrevPage) { %>
                                                <li class="page-item">
                                                    <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
                                                </li>
                                            <% } %>
                                            
                                            <% for (let i = 1; i <= totalPages; i++) { %>
                                                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                                    <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                                                </li>
                                            <% } %>
                                            
                                            <% if (hasNextPage) { %>
                                                <li class="page-item">
                                                    <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
                                                </li>
                                            <% } %>
                                        </ul>
                                    </nav>
                                <% } %>
                            <% } else { %>
                                <div class="text-center py-5">
                                    <i class="fas fa-book fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">Belum ada kursus</h5>
                                    <p class="text-muted">Mulai dengan menambahkan kursus pertama Anda.</p>
                                    <a href="/admin/courses/create" class="btn btn-primary">
                                        <i class="fas fa-plus me-2"></i>Tambah Kursus Pertama
                                    </a>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    