<%- include('../../layouts/admin', { title: title, user: user }) %>


        <div class="container py-5">
            <div class="row">
                <div class="col-12">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <h1 class="fw-bold">Tambah Kegiatan Mengajar</h1>
                            <p class="text-muted">Bagikan kegiatan mengajar, workshop, atau aktivitas pendidikan</p>
                        </div>
                        <a href="/admin/posts" class="btn btn-outline-primary">
                            <i class="fas fa-arrow-left me-2"></i>Kembali ke Daftar Postingan
                        </a>
                    </div>

                    <div class="card">
                        <div class="card-body">
                            <form action="/admin/posts/create" method="POST" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="mb-3">
                                            <label for="title" class="form-label">Judul Kegiatan</label>
                                            <input type="text" class="form-control" id="title" name="title" placeholder="Contoh: Workshop Coding untuk Siswa SMA" required>
                                        </div>
                                        
                                        <div class="mb-3">
                                            <label for="excerpt" class="form-label">Deskripsi Singkat</label>
                                            <textarea class="form-control" id="excerpt" name="excerpt" rows="3" placeholder="Jelaskan secara singkat tentang kegiatan ini..."></textarea>
                                        </div>
                                        
                                        <div class="mb-3">
                                            <label for="content" class="form-label">Detail Kegiatan</label>
                                            <textarea class="form-control" id="content" name="content" rows="12" placeholder="Ceritakan detail kegiatan mengajar, workshop, atau aktivitas pendidikan yang dilakukan..." required></textarea>
                                            <div class="form-text">
                                                <i class="fas fa-lightbulb me-1"></i>
                                                Tips: Ceritakan tentang tujuan kegiatan, peserta, materi yang diajarkan, dan hasil yang dicapai
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label for="featured_image" class="form-label">Foto Utama Kegiatan</label>
                                            <input type="file" class="form-control" id="featured_image" name="featured_image" accept="image/*">
                                            <small class="text-muted">Format: JPG, PNG, GIF. Maksimal 5MB.</small>
                                            <div class="form-text">
                                                <i class="fas fa-camera me-1"></i>
                                                Upload foto utama kegiatan (akan ditampilkan sebagai thumbnail)
                                            </div>
                                        </div>
                                        
                                        <div class="mb-3">
                                            <label for="activity_images" class="form-label">Foto Tambahan Kegiatan</label>
                                            <input type="file" class="form-control" id="activity_images" name="activity_images" accept="image/*" multiple>
                                            <small class="text-muted">Format: JPG, PNG, GIF. Maksimal 5MB per file. Bisa pilih lebih dari 1 foto.</small>
                                            <div class="form-text">
                                                <i class="fas fa-images me-1"></i>
                                                Upload foto tambahan untuk dokumentasi kegiatan (opsional)
                                            </div>
                                            <div id="image-preview" class="mt-2"></div>
                                        </div>
                                        
                                        <div class="mb-3">
                                            <label for="video_url" class="form-label">Video Kegiatan (Opsional)</label>
                                            <input type="url" class="form-control" id="video_url" name="video_url" placeholder="https://www.youtube.com/watch?v=...">
                                            <small class="text-muted">Link video YouTube atau platform video lainnya</small>
                                            <div class="form-text">
                                                <i class="fas fa-video me-1"></i>
                                                Bagikan video dokumentasi kegiatan (bisa dikosongkan)
                                            </div>
                                        </div>
                                        
                                        <div class="mb-3">
                                            <label for="category_id" class="form-label">Kategori Kegiatan</label>
                                            <select class="form-select" id="category_id" name="category_id">
                                                <option value="">Pilih Kategori</option>
                                                <option value="1">Workshop & Pelatihan</option>
                                                <option value="2">Kelas Mengajar</option>
                                                <option value="3">Seminar & Webinar</option>
                                                <option value="4">Kegiatan Siswa</option>
                                                <option value="5">Aktivitas Luar Kelas</option>
                                            </select>
                                        </div>
                                        
                                        <div class="mb-3">
                                            <label for="activity_date" class="form-label">Tanggal Kegiatan</label>
                                            <input type="date" class="form-control" id="activity_date" name="activity_date">
                                        </div>
                                        
                                        <div class="mb-3">
                                            <label for="location" class="form-label">Lokasi Kegiatan</label>
                                            <input type="text" class="form-control" id="location" name="location" placeholder="Contoh: Ruang Lab Komputer, SMA Negeri 1">
                                        </div>
                                        
                                        <div class="mb-3">
                                            <label for="status" class="form-label">Status</label>
                                            <select class="form-select" id="status" name="status">
                                                <option value="draft">Draft</option>
                                                <option value="published">Diterbitkan</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="d-flex gap-2">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save me-2"></i>Simpan Kegiatan
                                    </button>
                                    <button type="submit" name="action" value="draft" class="btn btn-outline-secondary">
                                        <i class="fas fa-file me-2"></i>Simpan sebagai Draft
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    