<script>
document.addEventListener('DOMContentLoaded', function() {
    // Initial active state
    document.querySelector('.layanan-item').classList.add('active');
    
    // Add click handlers to layanan items
    document.querySelectorAll('.layanan-item').forEach(item => {
        item.addEventListener('click', async function() {
            // Remove active class from all items
            document.querySelectorAll('.layanan-item').forEach(i => i.classList.remove('active'));
            // Add active class to clicked item
            this.classList.add('active');
            
            // Get category from label text
            const category = this.querySelector('.layanan-label').textContent
                .toLowerCase()
                .replace('byzan ', '')
                .trim();
            
            try {
                // Fetch data from server
                const response = await fetch(`/api/content/${category}`);
                const data = await response.json();
                
                if (data.success) {
                    updateCards(data.items);
                }
            } catch (error) {
                console.error('Error fetching data:', error);
            }
        });
    });

    function updateCards(items) {
        const cardList = document.querySelector('.card-list');
        const showMoreBtn = document.querySelector('.show-more-btn');
        const category = document.querySelector('.layanan-item.active').querySelector('.layanan-label').textContent
            .toLowerCase()
            .replace('byzan ', '')
            .trim();
        
        // Update cards
        cardList.innerHTML = items.map(item => {
            const imageUrl = item.featured_image || item.thumbnail || `/assets/default-${category}.jpg`;
            const author = item.author_name || item.instructor_name || 'Admin';
            
            return `
                <div class="card" onclick="window.location.href='/${category}/${item.slug}'">
                    <div class="illustration">
                        <img src="${imageUrl}" 
                             alt="${item.title}" 
                             class="card-img"
                             onerror="this.src='/assets/default-${category}.jpg'"
                        >
                    </div>
                    <div class="content">
                        <h2 class="card-title">${item.title}</h2>
                        <div class="author">
                            <img 
                                src="https://api.dicebear.com/7.x/avataaars/svg?seed=${encodeURIComponent(author)}&backgroundColor=2c5530,1e3a21,4a7c59" 
                                alt="${author}" 
                                class="avatar"
                            >
