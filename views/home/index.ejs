<%- include('../layouts/main', { title: title, user: user }) %>


        <!-- Hero Section -->
<section class="hero-section bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">Belajar Lebih Mudah dengan ByzantiumEdu</h1>
                <p class="lead mb-4">Platform pembelajaran online terbaik untuk semua kalangan. Akses ribuan kursus gratis dan berkualitas tinggi.</p>
                <div class="d-flex gap-3">
                    <a href="/courses" class="btn btn-light btn-lg">
                        <i class="fas fa-play me-2"></i>Mulai Belajar
                    </a>
                    <a href="/about" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-info-circle me-2"></i>Pelajari Lebih Lanjut
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <img src="/images/hero-illustration.svg" alt="Learning Illustration" class="img-fluid" style="max-width: 400px;">
            </div>
        </div>
    </div>
</section>

<!-- Featured Courses Section -->
<section class="py-5">
    <div class="container">
        <div class="row mb-4">
            <div class="col-lg-8">
                <h2 class="fw-bold">Kursus Unggulan</h2>
                <p class="text-muted">Pilih dari berbagai kursus berkualitas yang telah dirancang oleh para ahli</p>
            </div>
            <div class="col-lg-4 text-lg-end">
                <a href="/courses" class="btn btn-outline-primary">Lihat Semua Kursus</a>
            </div>
        </div>
        
        <div class="row">
            <% if (featuredCourses && featuredCourses.length > 0) { %>
                <% featuredCourses.forEach(course => { %>
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100 shadow-sm">
                            <% if (course.thumbnail) { %>
                                <img src="<%= course.thumbnail %>" class="card-img-top" alt="<%= course.title %>" style="height: 200px; object-fit: cover;">
                            <% } else { %>
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                    <i class="fas fa-book fa-3x text-muted"></i>
                                </div>
                            <% } %>
                            <div class="card-body">
                                <h5 class="card-title fw-bold"><%= course.title %></h5>
                                <p class="card-text text-muted"><%= course.description %></p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="badge bg-primary"><%= course.category_name || 'Umum' %></span>
                                    <small class="text-muted">
                                        <i class="fas fa-user me-1"></i><%= course.instructor_name %>
                                    </small>
                                </div>
                            </div>
                            <div class="card-footer bg-transparent">
                                <a href="/courses/<%= course.slug %>" class="btn btn-primary w-100">
                                    <i class="fas fa-play me-2"></i>Mulai Belajar
                                </a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12 text-center">
                    <div class="py-5">
                        <i class="fas fa-book fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Belum ada kursus tersedia</h5>
                        <p class="text-muted">Kursus akan segera ditambahkan</p>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</section>

<!-- Latest Posts Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row mb-4">
            <div class="col-lg-8">
                <h2 class="fw-bold">Kegiatan Terbaru</h2>
                <p class="text-muted">Lihat dokumentasi kegiatan mengajar, workshop, dan aktivitas pendidikan terbaru</p>
            </div>
            <div class="col-lg-4 text-lg-end">
                <a href="/posts" class="btn btn-outline-primary">Lihat Semua Kegiatan</a>
            </div>
        </div>
        
        <div class="row">
            <% if (latestActivities && latestActivities.length > 0) { %>
                <% latestActivities.forEach(activity => { %>
                    <div class="col-md-6 col-lg-3 mb-4">
                        <div class="card h-100 shadow-sm">
                            <% if (activity.featured_image) { %>
                                <img src="<%= activity.featured_image %>" class="card-img-top" alt="<%= activity.title %>" style="height: 150px; object-fit: cover;">
                            <% } else { %>
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 150px;">
                                    <i class="fas fa-calendar-alt fa-2x text-muted"></i>
                                </div>
                            <% } %>
                            <div class="card-body">
                                <h6 class="card-title fw-bold"><%= activity.title %></h6>
                                <p class="card-text text-muted small"><%= activity.excerpt || activity.content.substring(0, 100) + '...' %></p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">
                                        <i class="fas fa-calendar me-1"></i>
                                        <% if (activity.activity_date) { %>
                                            <%= new Date(activity.activity_date).toLocaleDateString('id-ID') %>
                                        <% } else { %>
                                            -
                                        <% } %>
                                    </small>
                                    <small class="text-muted">
                                        <i class="fas fa-eye me-1"></i><%= activity.view_count || 0 %>
                                    </small>
                                </div>
                            </div>
                            <div class="card-footer bg-transparent">
                                <a href="/posts/<%= activity.slug %>" class="btn btn-outline-primary btn-sm w-100">Lihat Detail</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12 text-center">
                    <div class="py-5">
                        <i class="fas fa-calendar-alt fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Belum ada kegiatan tersedia</h5>
                        <p class="text-muted">Kegiatan akan segera ditambahkan</p>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</section>

<!-- Pedia Section -->
<section class="py-5">
    <div class="container">
        <div class="row mb-4">
            <div class="col-lg-8">
                <h2 class="fw-bold">Ensiklopedia Digital</h2>
                <p class="text-muted">Jelajahi pengetahuan dalam format ensiklopedia yang mudah dipahami</p>
            </div>
            <div class="col-lg-4 text-lg-end">
                <a href="/pedia" class="btn btn-outline-primary">Jelajahi Pedia</a>
            </div>
        </div>
        
        <div class="row">
            <% if (latestPedia && latestPedia.length > 0) { %>
                <% latestPedia.forEach(article => { %>
                    <div class="col-md-6 col-lg-3 mb-4">
                        <div class="card h-100 shadow-sm">
                            <% if (article.featured_image) { %>
                                <img src="<%= article.featured_image %>" class="card-img-top" alt="<%= article.title %>" style="height: 150px; object-fit: cover;">
                            <% } else { %>
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 150px;">
                                    <i class="fas fa-encyclopedia fa-2x text-muted"></i>
                                </div>
                            <% } %>
                            <div class="card-body">
                                <h6 class="card-title fw-bold"><%= article.title %></h6>
                                <p class="card-text text-muted small"><%= article.excerpt || article.content.substring(0, 100) + '...' %></p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">
                                        <i class="fas fa-user me-1"></i><%= article.author_name %>
                                    </small>
                                    <small class="text-muted">
                                        <i class="fas fa-eye me-1"></i><%= article.view_count %>
                                    </small>
                                </div>
                            </div>
                            <div class="card-footer bg-transparent">
                                <a href="/pedia/<%= article.slug %>" class="btn btn-outline-primary btn-sm w-100">Baca Artikel</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12 text-center">
                    <div class="py-5">
                        <i class="fas fa-encyclopedia fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Belum ada artikel pedia tersedia</h5>
                        <p class="text-muted">Artikel pedia akan segera ditambahkan</p>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</section>

