<%- include('../../layouts/admin', { title: title, user: user }) %>


        <div class="container py-5">
            <div class="row">
                <div class="col-12">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <h1 class="fw-bold">Kelola Pengguna</h1>
                            <p class="text-muted">Kelola semua pengguna di platform ByzantiumEdu</p>
                        </div>
                        <a href="/admin/users/create" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Tambah Pengguna
                        </a>
                    </div>

                    <!-- Search and Filter -->
                    <div class="card mb-4">
                        <div class="card-body">
                            <form method="GET" class="row g-3">
                                <div class="col-md-4">
                                    <input type="text" class="form-control" name="search" placeholder="Cari pengguna..." value="">
                                </div>
                                <div class="col-md-3">
                                    <select class="form-select" name="role">
                                        <option value="">Semua Role</option>
                                        <option value="admin">Admin</option>
                                        <option value="user">User</option>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <select class="form-select" name="status">
                                        <option value="">Semua Status</option>
                                        <option value="active">Aktif</option>
                                        <option value="inactive">Tidak Aktif</option>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <button type="submit" class="btn btn-outline-primary w-100">
                                        <i class="fas fa-search me-1"></i>Cari
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Users Table -->
                    <div class="card">
                        <div class="card-body">
                            <% if (users && users.length > 0) { %>
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Nama Lengkap</th>
                                                <th>Username</th>
                                                <th>Email</th>
                                                <th>Role</th>
                                                <th>Status</th>
                                                <th>Tanggal Daftar</th>
                                                <th>Aksi</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% users.forEach(user => { %>
                                                <tr>
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                                                <i class="fas fa-user text-white"></i>
                                                            </div>
                                                            <div>
                                                                <h6 class="mb-0"><%= user.full_name %></h6>
                                                                <small class="text-muted">ID: <%= user.id %></small>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td><%= user.username %></td>
                                                    <td><%= user.email %></td>
                                                    <td>
                                                        <% if (user.role === 'admin') { %>
                                                            <span class="badge bg-danger">Admin</span>
                                                        <% } else { %>
                                                            <span class="badge bg-primary">User</span>
                                                        <% } %>
                                                    </td>
                                                    <td>
                                                        <span class="badge bg-success">Aktif</span>
                                                    </td>
                                                    <td><%= new Date(user.created_at).toLocaleDateString('id-ID') %></td>
                                                    <td>
                                                        <div class="btn-group" role="group">
                                                            <a href="/admin/users/edit/<%= user.id %>" class="btn btn-sm btn-outline-primary">
                                                                <i class="fas fa-edit"></i>
                                                            </a>
                                                            <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteUser(<%= user.id %>)">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        </div>
                                                    </td>
                                                </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>

                                <!-- Pagination -->
                                <% if (totalPages > 1) { %>
                                    <nav aria-label="Page navigation" class="mt-4">
                                        <ul class="pagination justify-content-center">
                                            <% if (currentPage > 1) { %>
                                                <li class="page-item">
                                                    <a class="page-link" href="?page=<%= currentPage - 1 %>&search=<%= query.search || '' %>&role=<%= query.role || '' %>&status=<%= query.status || '' %>">Previous</a>
                                                </li>
                                            <% } %>
                                            
                                            <% for (let i = 1; i <= totalPages; i++) { %>
                                                <li class="page-item <%= currentPage == i ? 'active' : '' %>">
                                                    <a class="page-link" href="?page=<%= i %>&search=<%= query.search || '' %>&role=<%= query.role || '' %>&status=<%= query.status || '' %>"><%= i %></a>
                                                </li>
                                            <% } %>
                                            
                                            <% if (currentPage < totalPages) { %>
                                                <li class="page-item">
                                                    <a class="page-link" href="?page=<%= currentPage + 1 %>&search=<%= query.search || '' %>&role=<%= query.role || '' %>&status=<%= query.status || '' %>">Next</a>
                                                </li>
                                            <% } %>
                                        </ul>
                                    </nav>
                                <% } %>
                            <% } else { %>
                                <div class="text-center py-5">
                                    <i class="fas fa-users fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">Belum ada pengguna</h5>
                                    <p class="text-muted">Mulai dengan menambahkan pengguna pertama.</p>
                                    <a href="/admin/users/create" class="btn btn-primary">
                                        <i class="fas fa-plus me-2"></i>Tambah Pengguna Pertama
                                    </a>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    