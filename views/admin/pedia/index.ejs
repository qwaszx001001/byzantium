<%- include('../../layouts/admin', { title: title, user: user }) %>


        <div class="container py-5">
            <!-- Header -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1 class="fw-bold mb-2">Kelola Artikel Pedia</h1>
                            <p class="text-muted mb-0">Daftar semua artikel edukasi di platform ini</p>
                        </div>
                        <a href="/admin/pedia/create" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Tambah Artikel
                        </a>
                    </div>
                </div>
            </div>

            <!-- Articles List -->
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-newspaper me-2"></i>Daftar Artikel Pedia</h5>
                </div>
                <div class="card-body">
                    <% if (articles && articles.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Banner</th>
                                        <th>Judul</th>
                                        <th>Penulis</th>
                                        <th>Kategori</th>
                                        <th>Status</th>
                                        <th>Views</th>
                                        <th>Tanggal</th>
                                        <th>Aksi</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% articles.forEach(article => { %>
                                        <tr>
                                            <td>
                                                <% if (article.featured_image) { %>
                                                    <img src="<%= article.featured_image %>" 
                                                         alt="<%= article.title %>" 
                                                         class="rounded" 
                                                         style="width: 60px; height: 40px; object-fit: cover;">
                                                <% } else { %>
                                                    <div class="rounded bg-light d-flex align-items-center justify-content-center" 
                                                         style="width: 60px; height: 40px;">
                                                        <i class="fas fa-image text-muted"></i>
                                                    </div>
                                                <% } %>
                                            </td>
                                            <td>
                                                <strong><%= article.title %></strong>
                                                <% if (article.excerpt) { %>
                                                    <br><small class="text-muted"><%= article.excerpt.substring(0, 50) %><%= article.excerpt.length > 50 ? '...' : '' %></small>
                                                <% } %>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <% if (article.author_avatar) { %>
                                                        <img src="<%= article.author_avatar %>" 
                                                             alt="<%= article.author_name %>" 
                                                             class="rounded-circle me-2" 
                                                             style="width: 30px; height: 30px; object-fit: cover;">
                                                    <% } %>
                                                    <span><%= article.author_name %></span>
                                                </div>
                                            </td>
                                            <td>
                                                <% if (article.category_name) { %>
                                                    <span class="badge bg-primary"><%= article.category_name %></span>
                                                <% } else { %>
                                                    <span class="badge bg-secondary">Umum</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <% if (article.status === 'published') { %>
                                                    <span class="badge bg-success">Diterbitkan</span>
                                                <% } else { %>
                                                    <span class="badge bg-warning">Draft</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <span class="badge bg-info"><%= article.view_count || 0 %></span>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    <%= new Date(article.created_at).toLocaleDateString('id-ID') %>
                                                </small>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="/pedia/<%= article.slug %>" class="btn btn-sm btn-outline-info" target="_blank">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="/admin/pedia/<%= article.id %>/edit" class="btn btn-sm btn-outline-warning">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteArticle(<%= article.id %>)">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        <% if (totalPages > 1) { %>
                            <nav aria-label="Articles pagination" class="mt-4">
                                <ul class="pagination justify-content-center">
                                    <% if (hasPrevPage) { %>
                                        <li class="page-item">
                                            <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
                                        </li>
                                    <% } %>
                                    
                                    <% for (let i = 1; i <= totalPages; i++) { %>
                                        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                            <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                                        </li>
                                    <% } %>
                                    
                                    <% if (hasNextPage) { %>
                                        <li class="page-item">
                                            <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
                                        </li>
                                    <% } %>
                                </ul>
                            </nav>
                        <% } %>
                    <% } else { %>
                        <div class="text-center py-5">
                            <i class="fas fa-newspaper fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Belum ada artikel Pedia</h5>
                            <p class="text-muted">Tambahkan artikel pertama untuk platform ini</p>
                            <a href="/admin/pedia/create" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Tambah Artikel Pertama
                            </a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    