<%- include('../../layouts/admin', { title: title, user: user }) %>


        <div class="container py-5">
            <div class="row">
                <div class="col-12">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <h1 class="fw-bold">Kelola Kegiatan Mengajar</h1>
                            <p class="text-muted">Kelola semua kegiatan mengajar, workshop, dan aktivitas pendidikan</p>
                        </div>
                        <a href="/admin/posts/create" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Tambah Kegiatan
                        </a>
                    </div>

                    <!-- Search and Filter -->
                    <div class="card mb-4">
                        <div class="card-body">
                            <form method="GET" class="row g-3">
                                <div class="col-md-4">
                                    <input type="text" class="form-control" name="search" placeholder="Cari kegiatan..." value="<%= typeof query !== 'undefined' && query.search ? query.search : '' %>">
                                </div>
                                <div class="col-md-3">
                                    <select class="form-select" name="category">
                                        <option value="">Semua Kategori</option>
                                        <% if (typeof categories !== 'undefined' && categories && categories.length > 0) { %>
                                            <% categories.forEach(category => { %>
                                                <option value="<%= category.id %>" <%= (typeof query !== 'undefined' && query.category == category.id) ? 'selected' : '' %>><%= category.name %></option>
                                            <% }) %>
                                        <% } %>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <select class="form-select" name="status">
                                        <option value="">Semua Status</option>
                                        <option value="published" <%= (typeof query !== 'undefined' && query.status === 'published') ? 'selected' : '' %>>Diterbitkan</option>
                                        <option value="draft" <%= (typeof query !== 'undefined' && query.status === 'draft') ? 'selected' : '' %>>Draft</option>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <button type="submit" class="btn btn-outline-primary w-100">
                                        <i class="fas fa-search me-1"></i>Cari
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Posts Table -->
                    <div class="card">
                        <div class="card-body">
                            <% if (posts && posts.length > 0) { %>
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Foto</th>
                                                <th>Judul Kegiatan</th>
                                                <th>Kategori</th>
                                                <th>Tanggal Kegiatan</th>
                                                <th>Lokasi</th>
                                                <th>Status</th>
                                                <th>Views</th>
                                                <th>Aksi</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% posts.forEach(post => { %>
                                                <tr>
                                                    <td>
                                                        <% if (post.featured_image) { %>
                                                            <img src="<%= post.featured_image %>" alt="<%= post.title %>" class="rounded" style="width: 50px; height: 50px; object-fit: cover;">
                                                        <% } else { %>
                                                            <div class="bg-light rounded d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                                                <i class="fas fa-newspaper text-muted"></i>
                                                            </div>
                                                        <% } %>
                                                    </td>
                                                    <td>
                                                        <h6 class="mb-1"><%= post.title %></h6>
                                                        <small class="text-muted"><%= post.excerpt ? post.excerpt.substring(0, 50) + '...' : 'Tidak ada deskripsi' %></small>
                                                    </td>
                                                    <td>
                                                        <% if (post.category_name) { %>
                                                            <span class="badge bg-info"><%= post.category_name %></span>
                                                        <% } else { %>
                                                            <span class="text-muted">-</span>
                                                        <% } %>
                                                    </td>
                                                    <td>
                                                        <% if (post.activity_date) { %>
                                                            <%= new Date(post.activity_date).toLocaleDateString('id-ID') %>
                                                        <% } else { %>
                                                            <span class="text-muted">-</span>
                                                        <% } %>
                                                    </td>
                                                    <td>
                                                        <% if (post.location) { %>
                                                            <small><%= post.location %></small>
                                                        <% } else { %>
                                                            <span class="text-muted">-</span>
                                                        <% } %>
                                                    </td>
                                                    <td>
                                                        <% if (post.status === 'published') { %>
                                                            <span class="badge bg-success">Diterbitkan</span>
                                                        <% } else { %>
                                                            <span class="badge bg-warning">Draft</span>
                                                        <% } %>
                                                    </td>
                                                    <td><%= post.view_count || 0 %></td>
                                                    <td>
                                                        <div class="btn-group" role="group">
                                                            <a href="/admin/posts/edit/<%= post.id %>" class="btn btn-sm btn-outline-primary">
                                                                <i class="fas fa-edit"></i>
                                                            </a>
                                                            <a href="/posts/<%= post.slug %>" class="btn btn-sm btn-outline-info" target="_blank">
                                                                <i class="fas fa-eye"></i>
                                                            </a>
                                                            <button type="button" class="btn btn-sm btn-outline-danger" onclick="deletePost(<%= post.id %>)">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        </div>
                                                    </td>
                                                </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>

                                <!-- Pagination -->
                                <% if (totalPages > 1) { %>
                                    <nav aria-label="Page navigation" class="mt-4">
                                        <ul class="pagination justify-content-center">
                                            <% if (currentPage > 1) { %>
                                                <li class="page-item">
                                                    <a class="page-link" href="?page=<%= currentPage - 1 %>&search=<%= typeof query !== 'undefined' && query.search ? query.search : '' %>&category=<%= typeof query !== 'undefined' && query.category ? query.category : '' %>&status=<%= typeof query !== 'undefined' && query.status ? query.status : '' %>">Previous</a>
                                                </li>
                                            <% } %>
                                            
                                            <% for (let i = 1; i <= totalPages; i++) { %>
                                                <li class="page-item <%= currentPage == i ? 'active' : '' %>">
                                                    <a class="page-link" href="?page=<%= i %>&search=<%= typeof query !== 'undefined' && query.search ? query.search : '' %>&category=<%= typeof query !== 'undefined' && query.category ? query.category : '' %>&status=<%= typeof query !== 'undefined' && query.status ? query.status : '' %>"><%= i %></a>
                                                </li>
                                            <% } %>
                                            
                                            <% if (currentPage < totalPages) { %>
                                                <li class="page-item">
                                                    <a class="page-link" href="?page=<%= currentPage + 1 %>&search=<%= typeof query !== 'undefined' && query.search ? query.search : '' %>&category=<%= typeof query !== 'undefined' && query.category ? query.category : '' %>&status=<%= typeof query !== 'undefined' && query.status ? query.status : '' %>">Next</a>
                                                </li>
                                            <% } %>
                                        </ul>
                                    </nav>
                                <% } %>
                            <% } else { %>
                                <div class="text-center py-5">
                                    <i class="fas fa-calendar-alt fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">Belum ada kegiatan</h5>
                                    <p class="text-muted">Mulai dengan menambahkan kegiatan pertama Anda.</p>
                                    <a href="/admin/posts/create" class="btn btn-primary">
                                        <i class="fas fa-plus me-2"></i>Tambah Kegiatan Pertama
                                    </a>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    