<%- include('../layouts/main', { title: title, user: user }) %>

<!-- Flash Messages -->
<% if (success_msg && success_msg.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
        <i class="fas fa-check-circle me-2"></i><%= success_msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
<% } %>

<% if (error_msg && error_msg.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i><%= error_msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
<% } %>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: #f0f0f5;
    }

    /* Header Section */
    .header-section {
        background: url('/assets/image_2.png') center/cover;
        padding: 60px 0;
        color: white;
        position: relative;
        overflow: hidden;
        margin-top: -10px;
    }

    .header-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="20" cy="20" r="1" fill="white" opacity="0.1"/><circle cx="80" cy="40" r="1.5" fill="white" opacity="0.08"/><circle cx="40" cy="80" r="1" fill="white" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .header-content {
        display: grid;
        grid-template-columns: 1fr 500px;
        gap: 40px;
        align-items: center;
        padding: 20px 0;
        position: relative;
        z-index: 1;
    }

    .hero-text h1 {
        font-size: 2.5rem;
        font-weight: 700;
        line-height: 1.2;
        margin-bottom: 20px;
    }

    .hero-text p {
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 30px;
        opacity: 0.9;
    }

    .rating {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 30px;
    }

    .stars {
        display: flex;
        gap: 2px;
    }

    .star {
        width: 20px;
        height: 20px;
        background: #ffd700;
        clip-path: polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%);
    }

    /* Video Preview Styles */
    .video-preview {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.25);
    }

    .video-thumbnail {
        position: relative;
        cursor: pointer;
        transition: transform 0.3s ease;
    }

    .video-thumbnail:hover {
        transform: scale(1.02);
    }

    .video-thumbnail img {
        width: 100%;
        height: 300px;
        object-fit: cover;
        border-radius: 20px 20px 0 0;
    }

    .play-button {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 80px;
        height: 80px;
        background: rgba(255, 255, 255, 0.95);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }

    .play-button i {
        color: #2c5530;
        font-size: 32px;
        margin-left: 6px;
    }

    .video-thumbnail:hover .play-button {
        background: #2c5530;
    }

    .video-thumbnail:hover .play-button i {
        color: white;
    }

    .video-info {
        padding: 25px;
        color: white;
    }

    .video-info h4 {
        font-size: 1.4rem;
        margin-bottom: 10px;
        font-weight: 600;
    }

    .video-info p {
        font-size: 1rem;
        margin: 0;
        line-height: 1.5;
        opacity: 0.9;
    }

    /* Course Styles */
    .page-title {
        font-size: 24px;
        font-weight: bold;
        color: #333;
        margin-bottom: 20px;
    }

    .filter-bar {
        display: flex;
        gap: 15px;
        margin-bottom: 30px;
        flex-wrap: wrap;
    }

    .filter-button {
        padding: 8px 20px;
        border-radius: 20px;
        border: none;
        background: #fff;
        color: #333;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .filter-button.active {
        background: #2c5530;
        color: white;
    }

    .filter-button:hover {
        background: #2c5530;
        color: white;
    }

    .search-box {
        flex: 1;
        max-width: 300px;
        position: relative;
    }

    .search-box input {
        width: 100%;
        padding: 8px 15px;
        border-radius: 20px;
        border: none;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .search-box i {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #666;
    }

    .section {
        margin-bottom: 40px;
    }

    .section-title {
        font-size: 18px;
        font-weight: bold;
        color: #333;
        margin-bottom: 20px;
    }

    .courses-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
    }

    .course-card {
        border-radius: 8px;
        overflow: hidden;
        background: white;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        transition: transform 0.3s ease;
        cursor: pointer;
    }

    .course-card:hover {
        transform: translateY(-5px);
    }

    .course-header {
        height: 160px;
        padding: 0;
        color: white;
        position: relative;
        overflow: hidden;
    }

    .course-header img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .course-header-content {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        padding: 15px;
        background: linear-gradient(to top, rgba(0,0,0,0.8), rgba(0,0,0,0));
        z-index: 1;
    }

    .course-title {
        font-size: 16px;
        font-weight: bold;
        margin-bottom: 5px;
        color: white;
    }

    .course-subtitle {
        font-size: 12px;
        opacity: 0.9;
        color: rgba(255, 255, 255, 0.9);
    }

    .instructor-img {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        position: absolute;
        top: 15px;
        right: 15px;
        background: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
    }

    .course-footer {
        padding: 15px;
        background: white;
    }

    .course-name {
        font-size: 14px;
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
    }

    .skill-tag {
        padding: 6px 15px;
        border-radius: 20px;
        font-size: 12px;
        color: white;
        border: none;
        background: #2c5530;
        font-weight: 500;
    }

    /* Colors */
    .fiqih { background: #8B5CF6; }
    .aqidah { background: #3B82F6; }
    .akhlak { background: #10B981; }
    .nahwu { background: #059669; }
    .sharaf { background: #1F2937; }
    .tafsir { background: #EC4899; }
    .hadits { background: #F97316; }
    .umum { background: #6B7280; }

    @media (max-width: 768px) {
        .header-content {
            grid-template-columns: 1fr;
            text-align: center;
            padding: 10px;
        }

        .courses-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .video-preview {
            max-width: 600px;
            margin: 20px auto;
        }
    }

    @media (max-width: 480px) {
        .courses-grid {
            grid-template-columns: 1fr;
        }

        .video-thumbnail img {
            height: 350px;
        }
    }
</style>

